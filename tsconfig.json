{
  "compilerOptions": {
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "resolveJsonModule": true,
    "lib": [
      "es2018",
      "dom",
      "scripthost",
      "esnext.asynciterable"
    ],
    "target": "es2018",
    "sourceMap": true,
    "jsx": "react",
    "types": [
      "mocha",
      "chai"
    ],
  },
  "exclude": [
    "./dist"
  ]
}